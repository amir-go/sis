<h1 class="blocktitle">Exams</h1>

<table class="table">
	<thead>
		<tr>
			<th>Subject</th>
			<th>Start Date</th>
			<th>Professor</th>
		</tr>
	</thead>
	<tbody>
		<% @exams.each do |e| %>
			<tr>
				<td><%= e.subject.name %></td>
				<td><%= e.start_date.strftime("%-d.%-m.%Y. %H:%M") %></td>
				<td><%= e.professor.full_name %></td>
			</tr>
		<% end %>
	</tbody>
</table>