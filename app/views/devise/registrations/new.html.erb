<div class="form form-register">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :email, class: 'control-label' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'control-label' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'control-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :year, class: 'control-label' %><br />
          <%= f.text_field :year, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :first_name, class: 'control-label' %><br />
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :last_name, class: 'control-label' %><br />
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :department, class: 'control-label' %>
          <%= f.select :department, 
          options_for_select( 
            [["Web Development","Web Development"], 
            ["Software Engineering","Software Engineering"], 
            ["Networks Development","Networks Development"]] ), {}, { class: 'form-control' } %>
        </div>

        <div class="field">
          <%= f.label :date_of_birth, class: 'control-label' %><br />
          <%= f.date_field :date_of_birth, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>