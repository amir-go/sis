<h1 class="blocktitle">News</h1>
<% @posts.each do |p| %>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h1 class="panel-title"><%= link_to p.title, post_path(p.id) %></h1>
	    <small>Posted at: <%= p.created_at.strftime("%d.%-m.%Y %H:%M") %> | Posted by: <%= p.user.full_name %></small>
	    <p class="pull-right"><i class="glyphicon glyphicon-comment"></i> <%= p.comments.count %></p>
	  </div>
	  <div class="panel-body">
	    <%= truncate(p.description, length: 200, separator: ' '){ link_to "Read more", post_path(p.id) } %>
	  </div>
	</div>
<% end %>
<div style=""></div>
<div class="col-md-4 col-md-offset-4">
	<%= will_paginate @posts %>
</div>