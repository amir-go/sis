<h1 class="blocktitle">List of professors</h1>

<% if flash[:notice] %>
	<div class="alert alert-success">
		<p><%= flash[:notice] %></p>
	</div>
<% end %>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Subjects</th>
			<th>Edit</th>
		</tr>
	</thead>

	<tbody>
		<% @professors.each do |p| %>
			<tr>
				<td><%= p.title %></td>
				<td><%= p.first_name %></td>
				<td><%= p.last_name %></td>
				<td>
					<% p.subjects.each do |s| %>
						<span><%= s.name %></span><br>
					<% end %>
				</td>
				<td><%= link_to 'Edit', edit_admin_professor_path(p.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>