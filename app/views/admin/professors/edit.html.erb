<h1 class="blocktitle">Edit <%= @professor.full_name %></h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for @professor, url: admin_professor_path(@professor.id), html: { multipart: true } do |form| %>

		<div class="form-group">
			<%= image_tag @professor.avatar.url(:thumb) %>
			<%= form.file_field :avatar, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= form.label :first_name, class: 'control-label' %>
			<%= form.text_field :first_name, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= form.label :last_name, class: 'control-label' %>
			<%= form.text_field :last_name, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= form.label :title, class: 'control-label' %>
			<%= form.text_field :title, class: 'form-control' %>
		</div>

		<%= form.submit 'Update' %>
		<%= link_to 'Delete', admin_professor_path(@professor.id), method: :delete, data: { confirm: "Are you sure?"}, class: 'pull-right' %><br>
		<%= link_to 'Back', :back, class: 'pull-right' %>
		<% end %>
	</div>
</div>