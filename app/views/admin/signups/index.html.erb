<h1 class="blocktitle">Signups 
<%= link_to 'New', new_admin_signup_path, class: 'btn btn-default' %>
<span class="pull-right">
	<%= form_tag admin_signups_path, :method => 'get', :id => "signups_search" do %>
		<div class="input-group input-group-sm">
		   <%= text_field_tag :search, params[:search], placeholder: 'Search...', class: 'form-control' %>
		   <div class="input-group-btn">
		   	<button class="btn btn-default" type="submit">
	        <i class="glyphicon glyphicon-search"></i>
	      </button>
		   </div>
		</div>
	<% end %>
</span>
<%= link_to 'All', admin_signups_path, class: 'btn btn-default' %>
<%= link_to 'Year: 1', admin_signups_path(filter: 'year_1'), class: 'btn btn-default' %>
<%= link_to 'Year: 2', admin_signups_path(filter: 'year_2'), class: 'btn btn-default' %>
<%= link_to 'Year: 3', admin_signups_path(filter: 'year_3'), class: 'btn btn-default' %>
</h1>

<div id="signups"><%= render 'signups' %></div>