<h1 class="blocktitle">New Signup</h1>

<div class="row">
	<div class="col-md-6">
		<% if @signup.errors.any? %>
		<h2>Errors</h2>
		<ul class="validation-errors">
			<% @signup.errors.full_messages.each do |msg| %>
				<li class="nav alert alert-danger"><%= msg %></li>
			<% end %>
		</ul>
		<% end %>
		<%= form_for @signup, url: admin_signups_path do |form| %>
			<div class="form-group">
				<%= form.label :user_id, class: 'control-label' %>
				<%= form.collection_select :user_id, User.all, :id, :full_name, { prompt: true }, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= form.label :exam_id, class: 'control-label' %>
				<%= form.collection_select :exam_id, Exam.all, :id, :view, { prompt: true }, class: 'form-control' %>
			</div>
			
			<%= form.submit 'Save' %>
			<%= link_to 'Back', :back, class: 'pull-right' %>
		<% end %>
	</div>
</div>