<h1 class="blocktitle">New exam</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for @exam, url: admin_exams_path do |form| %>
			<div class="form-group">
				<%= form.label :subject_id, class: 'control-label' %>
				<%= form.collection_select :subject_id, Subject.all, :id, :name, { prompt: true }, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= form.label :professor_id, class: 'control-label' %>
				<%= form.collection_select :professor_id, Professor.all, :id, :full_name, { prompt: true }, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= form.label :start_date, class: 'control-label' %>
				<%= form.date_field :start_date, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= form.label :department, class: 'control-label' %>
				<%= form.select :department, 
						options_for_select([["Web Developing","WD"], ["Software Developing","SD"], ["Networks","N"]]), 
						class: 'form-control' %>
			</div>

			<%= form.submit 'Save' %>
			<%= link_to 'Back', :back, class: 'pull-right' %>
		<% end %>
	</div>
</div>