<h1 class="blocktitle">Active exams <small><%= link_to 'New', new_admin_exam_path, class: 'pull-right' %></small></h1>

<% if flash[:notice] %>
	<div class="alert alert-success">
		<p><%= flash[:notice] %></p>
	</div>
<% end %>

<table class="table">
	<thead>
		<th>Subject</th>
		<th>Start Date</th>
		<th>Professor</th>
		<th>Department</th>
	</thead>

	<tbody>
		<% @exams.each do |e| %>
		<tr>
			<td><%= e.subject.name %></td>
			<td><%= e.start_date.strftime("%-d.%-m.%Y. %H:%M") %></td>
			<td><%= e.professor.full_name %></td>
			<td><%= e.department %></td>
			<td><%= link_to 'Edit', edit_admin_exam_path(e.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>