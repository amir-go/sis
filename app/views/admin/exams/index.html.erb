<h1 class="blocktitle">Active exams 
	<span class="pull-right">
		<%= form_tag admin_exams_path, :method => 'get', :id => "exams_search" do %>
		<div class="input-group input-group-sm">
			<%= text_field_tag :search, params[:search], placeholder: 'Search subjects...', class: 'form-control' %>
			<div class="input-group-btn">
				<button class="btn btn-default" type="submit">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</div>
		</div>
		<% end %>
	</span>
	<%= link_to 'New', new_admin_exam_path, class: 'btn btn-default' %>
	<%= link_to 'All', admin_exams_path, class: 'btn btn-default' %>
	<%= link_to 'Year: 1', admin_exams_path(filter: 'year_1'), class: 'btn btn-default' %>
	<%= link_to 'Year: 2', admin_exams_path(filter: 'year_2'), class: 'btn btn-default' %>
	<%= link_to 'Year: 3', admin_exams_path(filter: 'year_3'), class: 'btn btn-default' %>
</h1>

<% if flash[:ex_notice] %>
<div class="alert alert-success">
	<p><%= flash[:notice] %></p>
</div>
<% end %>

<div id="exams"><%= render 'exams' %></div>