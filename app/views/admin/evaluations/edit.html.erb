<h1 class="blocktitle">Edit evaluation</h1>

<% if flash[:ev_notice] %>
	<div class="alert alert-success">
		<p><%= flash[:ev_notice] %></p>
	</div>
<% end %>

<% if flash[:ev_error] %>
	<div class="alert alert-danger">
		<p><%= flash[:ev_error] %></p>
	</div>
<% end %>

<%= form_for @evaluation, url: admin_evaluation_path(@evaluation.id) do |f| %>
	<div class="form-group">
		<%= f.label :user_id, class: 'control-label' %>
		<%= f.collection_select :user_id, User.all, :id, :full_name, { prompt: true }, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :subject_id, class: 'control-label' %>
		<%= f.collection_select :subject_id, Subject.all, :id, :name, { prompt: true }, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :evaluation, class: 'control-label' %>
		<%= f.text_field :evaluation, class: 'form-control' %>
	</div>
	<%= f.submit 'Update', class: 'btn btn-primary' %>
<% end %>