<h1 class="blocktitle">Evaluations
<span class="pull-right">
	<%= form_tag admin_evaluations_path, :method => 'get', :id => "posts_search" do %>
		<div class="input-group input-group-sm">
		   <%= text_field_tag :search, params[:search], placeholder: 'Search students...', class: 'form-control' %>
		   <div class="input-group-btn">
		   	<button class="btn btn-default" type="submit">
	        <i class="glyphicon glyphicon-search"></i>
	      </button>
		   </div>
		</div>
	<% end %>
</span>
<%= link_to 'New', new_admin_evaluation_path, class: 'btn btn-default' %>
</h1>

<div id="evaluations"><%= render 'evaluations' %></div>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= will_paginate @evaluations %>
	</div>
</div>