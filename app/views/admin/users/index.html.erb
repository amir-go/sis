<h1 class="blocktitle">All Users
	<span class="pull-right">
		<%= form_tag admin_users_path, :method => 'get', :id => "users_search" do %>
		<div class="input-group input-group-sm">
			<%= text_field_tag :search, params[:search], placeholder: 'Search users...', class: 'form-control' %>
			<div class="input-group-btn">
				<button class="btn btn-default" type="submit">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</div>
		</div>
		<% end %>
	</span>
	<%= link_to 'All', admin_users_path, class: 'btn btn-success' %>
	<%= link_to 'Year: 1', admin_users_path(filter: 'year_1'), class: 'btn btn-info' %>
	<%= link_to 'Year: 2', admin_users_path(filter: 'year_2'), class: 'btn btn-warning' %>
	<%= link_to 'Year: 3', admin_users_path(filter: 'year_3'), class: 'btn btn-danger' %>
</h1>

<% if flash[:u_warning] %>
<div class="alert alert-warning">
	<p><%= flash[:u_warning] %></p>
</div>
<% end %>

<% if flash[:u_notice] %>
<div class="alert alert-success">
	<p><%= flash[:u_notice] %></p>
</div>
<% end %>

<div id="users"><%= render 'users' %></div>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= will_paginate @users %>
	</div>
</div>