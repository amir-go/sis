<h1 class="blocktitle">Edit <%= @user.full_name %></h1>

<% if flash[:notice] %>
	<div class="alert alert-success">
		<p><%= flash[:notice] %></p>
	</div>
<% end %>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for @user, url: admin_user_path(@user.id) do |f| %>
			<div class="form-group">
				<%= f.label :first_name, class: 'control-label' %>
				<%= f.text_field :first_name, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :last_name, class: 'control-label' %>
				<%= f.text_field :last_name, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :email, class: 'control-label' %>
				<%= f.text_field :email, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :year, class: 'control-label' %>
				<%= f.text_field :year, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :department, class: 'control-label' %>
				<%= f.text_field :department, class: 'form-control' %>
			</div>

			<%= f.submit 'Update' %>

			<%= link_to 'Delete user', admin_user_path(@user.id), method: :delete, data: { confirm: "Are you sure?"}, class: 'pull-right' %>
		<% end %>
	</div>
</div>